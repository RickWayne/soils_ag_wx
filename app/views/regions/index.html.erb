<% @title = "Regions" %>
<% content_for :title do
    @title
   end %>

<% content_for :welcome do %>
  <h2><%= @title %></h2>
  <p>Maintain the list of regions.</p>
<% end %>

<h2><%= @title %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbrev</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.abbrev %></td>
        <td><%= link_to 'Show', region %></td>
        <td><%= link_to 'Edit', edit_region_path(region) %></td>
        <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Region', new_region_path %>
